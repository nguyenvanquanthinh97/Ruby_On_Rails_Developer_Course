<%= render "shared/errors", obj: @user %>

<%= form_with(model: @user, local: true) do |form|%>
  <p>
    <%= form.label :username %>
    <br />
    <%= form.text_field :username, class: "border-2", placeholder: "Username" %> 
  </p>
  <p>
    <%= form.label :email %>
    <br />
    <%= form.email_field :email, class: "border-2", placeholder: "Email" %>
  </p>
  <p>
    <%= form.label :password %>
    <br />
    <%= form.password_field :password, class: "border-2", placeholder: "Password" %>
  </p>
  <div class="mt-2">
    <button class="px-5 py-3 text-xs rounded-md text-zinc-800 bg-gray-300 hover:bg-blue-700 hover:text-white duration-500"><%= form.submit @user.new_record? ? "Sign Up" : "Update Account", class: "bg-transparent" %></button>
    <button class="px-5 py-3 text-xs rounded-md text-zinc-800 bg-gray-300 hover:bg-blue-700 hover:text-white duration-500"><%= link_to("Cancel", articles_path) %></button>
  </div>
<% end %>