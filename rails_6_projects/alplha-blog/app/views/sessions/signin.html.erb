<h1 class="text-3xl text-center mt-4">Log in</h1>

<div class="flex justify-center">
  <%= form_with(scope: :session, url: signin_path, local: true) do |form|%>
    <p>
      <%= form.label :email %>
      <br />
      <%= form.text_field :email, class: "border-2", placeholder: "Enter your email" %> 
    </p>
    <p>
      <%= form.label :password %>
      <br />
      <%= form.password_field :password, class: "border-2", placeholder: "Enter your password" %>
    </p>
    <div class="mt-2">
      <button class="px-5 py-3 text-xs rounded-md text-zinc-800 bg-gray-300 hover:bg-blue-700 hover:text-white duration-500"><%= form.submit "Sign in", class: "bg-transparent" %></button>
      <button class="px-5 py-3 text-xs rounded-md text-zinc-800 bg-gray-300 hover:bg-blue-700 hover:text-white duration-500"><%= link_to("Sign up", signup_path) %></button>
    </div>
  <% end %>
</div>